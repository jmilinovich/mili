{{!< default}}

{{#tag}}
<main class="gh-main gh-outer">
    <div class="gh-inner">
        <article class="gh-article {{post_class}}">
            <header class="gh-article-header gh-canvas">
                <h1 class="gh-article-title">{{@custom.writing_page_title}}</h1>
            </header>
            
            <section class="gh-content gh-canvas">
                <ul class="gh-posts-list">
                    {{#get "posts" filter='tag:{{slug}}' limit="all"}}
                        {{#foreach posts}}
                            <li>
                                <a href="{{url}}" class="gh-posts-list-link">
                                    {{title}}
                                </a>
                                <time class="gh-card-date" datetime="{{date format="YYYY-MM-DD"}}">
                                    {{date format="DD MMM YYYY"}}
                                </time>
                            </li>
                        {{else}}
                            <li>No posts to display.</li>
                        {{/foreach}}
                    {{/get}}
                </ul>
            </section>
        </article>
    </div>
</main>
{{/tag}}